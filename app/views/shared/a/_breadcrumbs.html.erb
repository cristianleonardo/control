<!-- BEGIN Breadcrumbs -->
<div class="row">
  <div class="col-lg-12">

    <ol class="breadcrumb">
      <li>
        <% if section == "main" %>
          <%= link_to(dashboard_path) do %>
            <i class="fa fa-bullseye fa-lg fa-fw"></i>
          <% end %>
        <% end %>
        <% if section == "administration" %>
          <%= link_to(contract_types_path) do %>
            <i class="fa fa-cogs fa-lg fa-fw"></i>
          <% end %>
        <% end %>
      </li>

      <% breadcrumbs[:crumbs].each do |crumb|  %>
        <li><%= link_to crumb[:name], crumb[:path] %></li>
      <% end %>

      <li class="active"><%= breadcrumbs[:active_label] %></li>
    </ol>
  </div>
</div>
<!-- END Breadcrumbs -->
