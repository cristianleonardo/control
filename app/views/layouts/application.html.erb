      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

    <%= render 'shared/a/navbar' %>

    <%= render 'shared/a/tools' %>

    <div class="container">
      <%= render 'shared/a/flash', flash: flash %>
      <%= yield %>
    </div>

    <%= render 'shared/a/footer' %>

    <%= javascript_webpack_asset 'application', media: 'all' %>
  </body>
</html>
